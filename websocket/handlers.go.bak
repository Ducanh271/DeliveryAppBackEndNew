package websocket

import (
	// "example.com/delivery-app/middleware"
	"fmt"
	"net/http"
	"time"

	"github.com/gin-gonic/gin"
	"github.com/golang-jwt/jwt/v5"
	"github.com/gorilla/websocket"
	// "example.com/delivery-app/config"
)

var upgrader = websocket.Upgrader{
	CheckOrigin: func(r *http.Request) bool {
		return true
	},
}

func ServeWs(hub *Hub, c *gin.Context) {
	//  Láº¥y token tá»« query param
	tokenStr := c.Query("token")
	if tokenStr == "" {
		c.JSON(http.StatusUnauthorized, gin.H{"error": "please authenticate first"})
		return
	}

	//  Debug: log token vÃ  secret
	fmt.Println("ðŸ”¹ [ServeWs] Incoming WebSocket connection")
	fmt.Println("ðŸ”¹ [ServeWs] Token:", tokenStr)
	// fmt.Println("ðŸ”¹ [ServeWs] JWT Secret:", config.JWTSecret)

	//  Parse vÃ  xÃ¡c thá»±c JWT
	claims := jwt.MapClaims{}
	token, err := jwt.ParseWithClaims(tokenStr, claims, func(token *jwt.Token) (interface{}, error) {
		// return middleware.JwtKey, nil
		return nil, nil
	})

	//  Debug: log lá»—i parse náº¿u cÃ³
	if err != nil {
		fmt.Println("[ServeWs] JWT parse error:", err)
	}
	if !token.Valid {
		fmt.Println(" [ServeWs] Token is invalid")
	}

	//  Debug: in thÃ´ng tin exp, now
	if exp, ok := claims["exp"].(float64); ok {
		fmt.Println("ðŸ”¹ [ServeWs] Token exp:", int64(exp))
		fmt.Println("ðŸ”¹ [ServeWs] Current time:", time.Now().Unix())
		if int64(exp) < time.Now().Unix() {
			fmt.Println("[ServeWs] Token has expired")
		}
	} else {
		fmt.Println("[ServeWs] Token has no valid exp claim")
	}

	if err != nil || !token.Valid {
		c.JSON(http.StatusUnauthorized, gin.H{"error": "invalid or expired token"})
		return
	}

	// Láº¥y userID tá»« claims
	userIDFloat, ok := claims["userID"].(float64)
	if !ok {
		fmt.Println("[ServeWs] Token payload invalid (missing userID)")
		c.JSON(http.StatusUnauthorized, gin.H{"error": "invalid token payload"})
		return
	}
	userID := int64(userIDFloat)

	// (Tuá»³ chá»n) Láº¥y role náº¿u báº¡n cáº§n phÃ¢n quyá»n shipper/admin
	role, _ := claims["role"].(string)

	//  Debug: in userID vÃ  role
	fmt.Printf("[ServeWs] Token valid â†’ userID=%d, role=%s\n", userID, role)

	//  Upgrade lÃªn WebSocket
	conn, err := upgrader.Upgrade(c.Writer, c.Request, nil)
	if err != nil {
		fmt.Println("[ServeWs] WebSocket upgrade error:", err)
		return
	}

	//  Táº¡o client má»›i
	client := &Client{
		ID:   userID,
		Conn: conn,
		Send: make(chan []byte, 256),
	}

	hub.Register <- client

	fmt.Printf("[ServeWs] WebSocket connected: userID=%d, role=%s\n", userID, role)

	// Start read/write goroutines
	go client.WritePump()
	go client.ReadPump(hub)
}
